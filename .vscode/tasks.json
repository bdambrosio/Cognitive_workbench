{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup-zenoh-environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "echo 'ðŸ”§ Setting up Zenoh environment...' && if [ ! -d 'zenoh_venv' ]; then echo 'ðŸ“¦ Creating virtual environment...' && python3 -m venv zenoh_venv && echo 'âœ… Virtual environment created'; else echo 'âœ… Virtual environment already exists'; fi && echo 'ðŸ”§ Activating virtual environment...' && source zenoh_venv/bin/activate && echo 'ðŸ“¦ Installing/updating dependencies...' && pip install --upgrade pip && pip install -r src/requirements.txt && echo 'ðŸ§ª Testing Zenoh installation...' && cd src && python test_zenoh_installation.py && echo 'âœ… Zenoh environment ready!'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
